snippet apt "Apt declaration" !b
- name: install $1
  apt: pkg=$1 state=latest
  sudo: yes
endsnippet

snippet template "Template declaration" !b
- name: $1
  template: src=$2 dest=$3 owner=$4 group=$5
  sudo: yes
endsnippet


snippet yum "Yum declaration" !b
- name: install $1
  yum: pkg=$1 state=latest
  sudo: yes
endsnippet


snippet service "Service declaration" !b
- name: $1
  service: name=$2 enabled=yes state=$3
  sudo: yes
endsnippet
